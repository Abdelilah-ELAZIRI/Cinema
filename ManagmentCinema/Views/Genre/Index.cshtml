@model IEnumerable<ManagmentCinema.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1>Genre</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Capacite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Capacite)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdG">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdG">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdG">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

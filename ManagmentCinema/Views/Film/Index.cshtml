@model IEnumerable<ManagmentCinema.Models.Film>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Films</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateSoortie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Langue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Realisateur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateSoortie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Langue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Realisateur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Photo)
                </td>
                <td class="text-right">
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.IdF">Edit</a>
                    <a asp-action="Details" class="btn btn-dark" asp-route-id="@item.IdF">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdF">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
